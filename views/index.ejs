<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Manager</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Contact Manager</h1>
        </div>
        <div class="add-contact">
            <h2>Add New Contact</h2>
            <form action="/save" method="POST">
                <div class="input">
                    <input id="name" type="text" name="name" placeholder="Name" required>
                    <input id="tell" type="tel" name="phone" placeholder="Phone" required>
                </div>
                <button type="submit" class="button add-button">Add Contact</button>
            </form>
        </div>
        <div class="contact-list">
            <h2>Contact List</h2>
            <ul class="contacts">
                <li class="contact-item">
                    <span class="contact-header">Name</span>
                    <span class="contact-header">Phone</span>
                    <span class="contact-header">Actions</span>
                </li>
                <% contacts.forEach(contact=>{%>
                    <li class="contact-item">
                        <span><%=contact.name%></span>
                        <span><%=contact.phone%></span>
                        <div class="actions">
                            <button class="button edit-button" onclick="editcontact('<%=contact._id%>','<%=contact.name%>','<%=contact.phone%>')"><img src="/edit.jpg" alt="Edit" width="20" height="20"></button>
                            <form action="/delete/<%=contact._id%>" method="POST">
                                <button class="button delete-button"><img src="/delete.png" alt="Delete" width="20" height="20"></button>
                            </form>
                        </div>   
                    </li>
                <%})%>     
            </ul>
    </div>
    <script>
        function editcontact(id,name,phone){
            document.getElementById('name').value = name;
            document.getElementById('tell').value = phone;
            fetch(`/delete/${id}`, {
                method: 'POST'
            });
        }
    </script>
</body>
</html>